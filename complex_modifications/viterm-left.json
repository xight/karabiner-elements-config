					"from": {
						"key_code": "spacebar",
						"modifiers": {
							"mandatory": [
								"left_control"
							]
						}
					},
					"to": [
						{
							"key_code": "grave_accent_and_tilde",
							"modifiers": [
								"left_option"
							]
						}
					],
					"conditions": [
						{
							"type": "frontmost_application_if",
							"bundle_identifiers": [
								"org.virtualbox.app.VirtualBoxVM",
								"com.microsoft.rdc.mac"
							]
						}
					],
					"type": "basic"
				}
			]
		},
		{
			"description": "Left Control + Left Shift + 3 to Left Command + Left Shift + 3 (Only Terminal, IDE, RDC)",
			"manipulators": [
				{
					"from": {
						"key_code": "3",
						"modifiers": {
							"mandatory": [
								"left_control",
								"left_shift"
							]
						}
					},
					"to": [
						{
							"key_code": "3",
							"modifiers": [
								"left_command",
