{
	"title": "Terminal, Vim (Caps Lock -> Left Control)",
	"maintainers": [
		"xight"
	],
	"homepage": "https://github.com/xight/karabiner-elements-config",
	"import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/xight/karabiner-elements-config/master/viterm-left.json",
	"rules": [
		{
			"description": "Caps Lock to Left Control (Only Terminal, IDE, RDC)",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "caps_lock",
						"modifiers": {
							"optional": ["any"]
						}
					},
					"to": {
						"key_code": "left_command"
					},
					"conditions": [
						{
							"type": "frontmost_application_if",
							"bundle_identifiers": [
								"com.apple.Terminal",
								"com.googlecode.iterm2",
								"org.vim.MacVim",
								"com.qvacua.VimR",
								"com.github.atom",
								"com.jetbrains.pycharm",
								"com.visualstudio.code.oss",
								"org.virtualbox.app.VirtualBoxVM",
								"com.microsoft.rdc.mac"
							]
						}
					]
				}
			]
		},
		{
			"description": "Caps Lock to Left Command (Unless Terminal, IDE, RDC)",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "caps_lock",
						"modifiers": {
							"optional": ["any"]
						}
					},
					"to": {
						"key_code": "left_command"
					},
					"conditions": [
						{
							"type": "frontmost_application_unless",
							"bundle_identifiers": [
								"com.apple.Terminal",
								"com.googlecode.iterm2",
								"org.vim.MacVim",
								"com.qvacua.VimR",
								"com.github.atom",
								"com.jetbrains.pycharm",
								"com.visualstudio.code.oss",
								"org.virtualbox.app.VirtualBoxVM",
								"com.microsoft.rdc.mac"
							]
						}
					]
				}
			]
		},
		{
			"description": "Left Control + Space to Left Command + Space (Only Terminal, IDE, RDC)",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "spacebar",
						"modifiers":{
							"mandatory": ["left_control"]
						}
					},
					"to": {
						"key_code": "spacebar",
						"modifiers": ["left_command"]
					},
					"conditions": [
						{
							"type": "frontmost_application_if",
							"bundle_identifiers": [
								"com.apple.Terminal",
