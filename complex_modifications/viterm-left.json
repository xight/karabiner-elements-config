			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "semicolon",
						"modifiers":{
							"mandatory": ["left_control"]
						}
					},
					"to": {
						"key_code": "semicolon",
						"modifiers": ["left_command"]
