{
	"title": "Google IME (Right Command)",
	"maintainers": [
		"xight"
	],
	"homepage": "https://github.com/xight/karabiner-elements-config",
	"import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/xight/karabiner-elements-config/master/google-ime-right.json",
	"rules": [
		{
			"description": "Right Command + T to F10 (only Google IME Japanese base / 半角英数に変換)",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "t",
						"modifiers":{
							"mandatory": ["right_command"]
						}
					},
					"to": [
						{
							"key_code": "f10"
						}
					],
					"conditions": [
						{
							"type": "input_source_if",
							"input_sources": [
								{
									"input_source_id": "com.google.inputmethod.Japanese.base"
								}
							]
						},
						{
							"type": "frontmost_application_unless",
							"bundle_identifiers": [
								"com.apple.Terminal",
								"com.googlecode.iterm2",
								"net.kovidgoyal.kitty",
								"org.vim.MacVim",
								"com.neovide.neovide",
								"com.qvacua.VimR",
								"com.github.atom",
								"com.jetbrains.pycharm",
								"com.visualstudio.code.oss",
								"com.microsoft.rdc.mac"
							]
						}
					]
				}
			]
		},
